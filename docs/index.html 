<body>
  <h1>情绪星空图</h1>
  <!-- 假设我们把最新图片放在 docs/output/latest.png -->
  <img src="output/latest.png" alt="情绪星空图" />
  <p>数据最后更新：<span id="date"></span></p>
  <script>
    // 从文件名里提取日期
    const img = document.querySelector('img');
    const parts = img.src.split('_');
    if (parts.length > 1) {
      const datePart = parts[1].slice(0,8);
      document.getElementById('date').textContent =
        `${datePart.slice(0,4)}-${datePart.slice(4,6)}-${datePart.slice(6,8)}`;
    }
  </script>
